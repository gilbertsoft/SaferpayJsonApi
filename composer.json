{
    "name": "gilbertsoft/saferpay-json-api",
    "description": "A PHP library implementing the Saferpay JSON API",
    "type": "library",
    "keywords": [
        "saferpay",
        "json",
        "api",
        "php"
    ],
    "homepage": "https://github.com/gilbertsoft/php-saferpay",
    "readme": "README.md",
    "license": "MIT",
    "authors": [
        {
            "name": "Simon Gilli",
            "email": "saferpay@gilbertsoft.org",
            "homepage": "https://gilbertsoft.org",
            "role": "Developer"
        },
        {
            "name": "Manuel Reinhard",
            "email": "manuel.reinhard@ticketpark.ch"
        },
        {
            "name": "Additional contributors",
            "homepage": "https://github.com/gilbertsoft/php-saferpay/graphs/contributors"
        }
    ],
    "support": {
        "issues": "https://github.com/gilbertsoft/php-saferpay/issues",
        "source": "https://github.com/gilbertsoft/php-saferpay"
    },
    "require": {
        "php": "^5.6 || ^7.0",
        "ext-ctype": "*",
        "doctrine/annotations": "^1.4",
        "jms/serializer": "^1.14 || ^3.4",
        "kriswallsmith/buzz": "^0.16 || ^1.0"
    },
    "require-dev": {
        "codeception/codeception": "^4.0",
        "codeception/module-asserts": "^1.1",
        "friendsofphp/php-cs-fixer": "^2.16",
        "overtrue/phplint": "^1.2"
    },
    "replace": {
        "gilbertsoft/saferpay-json-api": "self.version",
        "ticketpark/saferpay-json-api": "self.version"
    },
    "autoload": {
        "psr-4": {
            "Gilbertsoft\\SaferpayJsonApi\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Gilbertsoft\\SaferpayJsonApi\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": [],
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "scripts": {
        "test:php:cgl": [
            "php-cs-fixer --diff -v fix"
        ],
        "test:php:lint": [
            "phplint"
        ],
        "test:php:acceptance": [
            "codecept run --steps acceptance"
        ],
        "test:php:unit": [
            "codecept run --steps unit"
        ],
        "test": [
            "@test:php:cgl",
            "@test:php:lint",
            "@test:php:unit",
            "@test:php:acceptance"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.15.x-dev"
        }
    }
}
